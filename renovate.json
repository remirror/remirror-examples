{
    "extends": [
        "config:base",
        ":semanticCommitTypeAll(chore)"
    ],
    "packageRules": [
        {
            "groupName": "Remirror packages",
            "matchPackagePatterns": [
                ".*remirror.*",
                ".*prosemirror.*"
            ],
            "rangeStrategy": "bump"
        },
        {
            "groupName": "dependencies (non-major)",
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "extends": [
                "schedule:monthly"
            ],
            "rangeStrategy": "bump"
        }
    ],
    "rangeStrategy": "replace",
    "prConcurrentLimit": 2,
    "dependencyDashboard": true
}
